doctype html
html
	head
		meta(charset="utf-8")
		title= title
		link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css")
	body
		.container
			h1= message
			h2= welcome
			#list-container
			button#add-file-button.btn.btn-primary(onclick="toggleAddFileForm()") Add File
			#form-container.panel.hidden Really...someone should put a form here...
		script#list-template(type="text/x-handlebars-template").
			<ul class="list-group">
				{{#each files}}
				<li class="list-group-item">
					<strong>{{series}}:</strong> {{volume}} - # {{issue}} - {{coverDate}}
				</li>
				{{/each}}
			</ul>
		script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.8/handlebars.min.js")
		script(src="/js/app.js")
